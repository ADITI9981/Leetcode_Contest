
class Solution {
public:
    bool checkDivisibility(int n) {
        int sum=0;
        int num=n;
        int pro = 1;
        while(n>0){
            int digit = n%10;
            sum+=digit;
            pro*=digit;
            n/=10;
        }
        int total = sum+pro;
        return (num%total==0);
    }
};
